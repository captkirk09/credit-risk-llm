import pandas as pd, numpy as np, seaborn as sns, matplotlib.pyplot as plt
from pathlib import Path

RAW = Path("data/raw")

# LendingClub (requires mapping of loan_status to binary default)
lc = pd.read_csv(RAW/"lendingclub.csv")
print("LendingClub rows:", len(lc))
print(lc.columns[:30])

# Map loan_status -> default label
# Practical mapping: Fully Paid -> 0 (non-default), Charged Off/Default -> 1; drop transitory states.
# (Guidance aligns with the curated 'granting' version on Zenodo.)  [6](https://zenodo.org/records/11295916)
positive = {"Charged Off","Default"}
negative = {"Fully Paid"}
lc = lc[lc["loan_status"].isin(positive|negative)].copy()
lc["default"] = lc["loan_status"].apply(lambda x: 1 if x in positive else 0)
# Text column
if "description" not in lc.columns:
    lc["description"] = lc.get("desc", "").fillna("").astype(str)

print(lc["default"].value_counts(normalize=True))
sns.countplot(x="default", data=lc); plt.title("LendingClub default balance"); plt.show()

# German Credit (tabular only; original labels 1=Good, 2=Bad per UCI)  [7](https://archive.ics.uci.edu/dataset/144/statlog+german+credit+data)
# Different Kaggle copies may ship as CSV named 'german_credit_data.csv'â€”adjust below if needed.
g_candidates = list(RAW.glob("*german*/*.csv")) + list(RAW.glob("*german*.csv"))
print("German file candidates:", g_candidates[:3])
g = pd.read_csv(g_candidates[0])
print(g.head(3))

# If the file has 'Risk' or 'class' text labels, map to 0/1:
for c in ["Risk","class","creditability","target"]:
    if c in g.columns: 
        print("Using label column:", c)
        ycol = c
        break
else:
    ycol = None

if ycol:
    g[ycol] = g[ycol].astype(str).str.lower().map({"good":0,"bad":1,"1":0,"2":1}).fillna(g.get(ycol))
    print(g[ycol].value_counts(dropna=False))

print("\nExploration complete.")
